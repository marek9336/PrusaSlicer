pipeline
{
	agent 
	{
		label 'slave-docker'
    	}
	stages 
	{
		stage('Validate Docker')
		{
			steps
			{
				echo "Validate Docker"
				sh 'docker version'
				//sh 'docker info'
			}
		}
		stage('Preparation')
		{
			steps
			{
				echo "Preparation"
				sh 'echo "jenkins" | sudo -S apt-get install cmake'
				sh 'echo "jenkins" | sudo -S apt-get install make'
				sh 'echo "jenkins" | sudo -S apt-get -y install libgtk2.0-dev libgtk-3-dev libpulse-dev'
				//sh 'echo "jenkins" | sudo -S apt-get -y install make'
				sh 'mkdir -p build'
				sh 'cmake --version'
				sh 'make --version'
			}
		}
		stage('Build')
		{
			steps
			{
				echo "Build"
				sh 'cd deps; mkdir -p build/destd/usr/local/;cd build; pwd; cmake .. -DDESTDIR=destd/; pwd; mkdir -p make_output; make -j8'
				sh 'cpdir cp "/home/jenkins/jenkins_slave/workspace/slicer_pipe/deps/build" "/home/marek/Plocha/work/Unicorn/PrusaSlicer"'
			}
		}
	}
}
