pipeline
{
	agent
	{
		label 'slave-docker'
	}
	stages 
	{
		stage('Validate Docker')
		{
			steps
			{
				echo "Validate Docker"
				sh 'docker version'
				docker build -t docker-slave/jenkins-slave:0.1
			}
		}
		stage('Preparation')
		{
			steps
			{
				echo "Preparation"
				sh 'echo "jenkins" | sudo -S apt-get install cmake'
				sh 'echo "jenkins" | sudo -S apt-get install make'
				sh 'echo "jenkins" | sudo -S apt-get -y install libgtk2.0-dev libgtk-3-dev libpulse-dev'
				sh 'cmake --version'
				sh 'make --version'
			}
		}
		stage('Build')
		{
			steps
			{
				echo "Build"
				sh 'cd deps; mkdir -p build/destd/usr/local/;cd build; pwd; cmake .. -DDESTDIR=destd/; pwd; make -j8'
			}
		}
	}
}
