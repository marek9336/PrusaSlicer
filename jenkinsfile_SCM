pipeline
{
	agent any
	stages 
	{
		stage('Preparation')
		{
			steps
			{
				echo 'Vytvoření složky build'
				sh 'mkdir -p build'
				set(CMAKE_GENERATOR "Ninja")
				message("generator is set to ${CMAKE_GENERATOR}")
			}
		}
		stage('Build')
		{
			steps
			{
				echo 'První build'
				cmake(installation: 'cmake', arguments: '--version')
				
				sh 'cd build'
				cmake(installation: 'cmake', arguments: ' ..')
			}
		}
	}
}
