pipeline
{
	agent 
	{
		label 'slave-docker'
    	}
	stages 
	{
		stage('Validate Docker')
		{
			steps
			{
				echo "Validate Docker"
				sh 'docker version'
				//sh 'docker info'
			}
		}
		stage('Preparation')
		{
			steps
			{
				echo "Preparation"
				sh 'echo "jenkins" | sudo -S apt-get install cmake'
				sh 'echo "jenkins" | sudo -S apt-get install make'
				//sh 'echo "jenkins" | sudo -S apt-get -y install make'
				sh 'mkdir -p build'
				sh 'cmake --version'
				sh 'make --version'
			}
		}
		stage('clean')
		{
			steps
			{
				echo "Clean"
				sh 'cd deps; echo "jenkins" | sudo -S  mvdir build build_old'
			}
		}
		stage('Build')
		{
			steps
			{
				echo "Build"
				sh 'cd deps; mkdir -p build/destd/usr/local/;cd build; pwd; cmake .. -DDESTDIR=destd/; pwd; make -j8'
			}
		}
	}
}
