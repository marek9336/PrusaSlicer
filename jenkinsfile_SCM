pipeline
{
	agent any
	stages 
	{
		stage('Preparation')
		{
			steps
			{
				echo 'Vytvoření složky build'
				sh 'mkdir -p build'
				sh 'make install'
			}
		}
		stage('Build')
		{
			steps
			{
				sh 'cd build'
				echo 'První build'
				cmake(installation: 'cmake', arguments: '-S $Workspace -B build')
			}
		}
	}
}
