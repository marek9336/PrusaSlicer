pipeline
{
	agent any
	stages 
	{
		stage('Preparation')
		{
			steps
			{
				echo 'Vytvoření složky build'
				sh 'mkdir -p build'
				sh 'sudo apt-get install build-essential cmake'
			}
		}
		stage('Build')
		{
			steps
			{
				sh 'cd build'
				echo 'První build'
				sh 'cmake --help'
			}
		}
	}
}
