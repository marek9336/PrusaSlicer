pipeline
{
	agent 
	{
    		docker
		{
        		args  '-v /tmp:/tmp'
    		}
    	}
	stages 
	{
		stage('Validate Docker')
		{
			steps
			{
				sh 'docker info'
			}
		}
		stage('Preparation')
		{
			steps
			{
				sh 'mkdir -p build && cd build && pwd'
				sh 'apt-get install make'
			}
		}
		stage('Build')
		{
			steps
			{
				sh 'pwd'
				cmake(installation: 'cmake', arguments: '-S . -B ./build')
			}
		}
	}
}
