pipeline
{
	agent
	{
		docker
		{
		image 'jenkins-slave/jenkins-slave:1.0'
		label 'slave-docker'
		}
	}
	stages 
	{
		stage('Preparation')
		{
			steps
			{
				echo "Preparation"
				// sh 'echo "jenkins" | sudo -S apt-get -y install libgtk2.0-dev libgtk-3-dev libpulse-dev'
				sh 'cmake --version'
				sh 'make --version'
			}
		}
		stage('Build')
		{
			steps
			{
				echo "Build"
				sh 'git config --global user.email "marek9336@gmail.com"; git config --global user.name "Marek"; cd deps; mkdir -p build/destd/usr/local/;cd build; pwd; cmake .. -DDESTDIR=destd/; pwd; make -j8'
			}
		}
	}
}
